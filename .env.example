# Flask secret key (keep it random and secret)
SECRET_KEY = "your_secret_key_here"

# Database URL for cloud PostgreSQL
# Format: postgresql://username:password@hostname:port/databasename
DATABASE_URL = "postgresql://user:password@host:5432/dbname"

# SMTP settings for SendGrid
MAIL_SERVER = "smtp.sendgrid.net"         # Server for sending emails
MAIL_PORT = 587                           # TLS port
MAIL_USE_TLS = True                        # Enable TLS
MAIL_USERNAME = "apikey"                   # Always "apikey" for SendGrid SMTP
MAIL_PASSWORD = "your_sendgrid_api_key"    # Your SendGrid API key
MAIL_DEFAULT_SENDER = "you@yourdomain.com" # The "From" email address for outgoing emails